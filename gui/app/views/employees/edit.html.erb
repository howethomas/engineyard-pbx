<h1>Editing employee</h1>

<%= error_messages_for :employee %>

<% form_for(@employee) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Time zone</b><br />
    <%= f.text_field :time_zone %>
  </p>

  <p>
    <b>Extension</b><br />
    <%= f.text_field :extension %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @employee %> |
<%= link_to 'Back', employees_path %>
